@rendermode InteractiveServer
@using GestionInventario.Services
@inject AuthService AuthService

@code {
    private bool Expandir;
}

<div style="position: absolute; top: 10px; right: 10px;">
    <button class="nav-link" @onclick="() => Expandir = !Expandir" style="background:none; border:none; color:inherit; cursor:pointer;">
        <i class="fas fa-cog" style="font-size: 1.5em;"></i> 
    </button>

    @if (Expandir)
    {
        <div class="dropdown-content">
            @if (AuthService.IsAuthenticated)
            {
                if (AuthService.IsAdmin)
                {
                    <NavLink class="expand-menu" href="/CrearCuenta">
                        <span aria-hidden="true">Crear Cuenta</span>
                    </NavLink>
                }
                <NavLink class="expand-menu" href="/IniciarSesion">
                    <span aria-hidden="true">Cerrar sesi√≥n</span>
                </NavLink>
            }
        </div>
    }
</div>

<style>
    .dropdown-content {
        position: absolute;
        top: 35px;
        right: 0;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }
    .dropdown-content .expand-menu {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
    }
    .dropdown-content .expand-menu:hover {
        background-color: #f1f1f1;
    }
</style>
